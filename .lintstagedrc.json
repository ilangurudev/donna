{
  "frontend/**/*.{js,jsx,ts,tsx}": [
    "pnpm --filter frontend eslint --fix",
    "pnpm --filter frontend prettier --write"
  ],
  "frontend/**/*.{test,spec}.{ts,tsx}": [
    "pnpm --filter frontend test --run --changed"
  ],
  "frontend/**/*.{json,css,md}": [
    "pnpm --filter frontend prettier --write"
  ],
  "backend/**/*.py": [
    "cd backend && uv run ruff check --fix",
    "cd backend && uv run ruff format"
  ]
}
